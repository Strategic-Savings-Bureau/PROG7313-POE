<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_analysis"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".AnalysisActivity">

    <!--  AppBar: back arrow, title, avatar & gift icons  -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_analysis"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/teal_200"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Analysis"
        app:titleTextColor="@android:color/white">

        <ImageView
            android:id="@+id/iv_gift"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:padding="8dp"
            android:contentDescription=""
            app:tint="@android:color/white" />

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:contentDescription=""
            app:tint="@android:color/white" />

    </androidx.appcompat.widget.Toolbar>

    <!-- Metrics card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_metrics"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_analysis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:weightSum="2">

            <!-- Total Balance -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_label_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Balance"
                    android:textColor="@color/gray_700"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_value_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R7,783.00"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_300"/>

            <!-- Total Expense -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/tv_label_expense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Expense"
                    android:textColor="@color/gray_700"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_value_expense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-R1,187.40"
                    android:textColor="@color/red_600"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Progress + labels -->
    <TextView
        android:id="@+id/tv_progress_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30%"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_metrics"
        app:layout_constraintStart_toStartOf="@id/card_metrics"/>

    <TextView
        android:id="@+id/tv_progress_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R20,000.00"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_metrics"
        app:layout_constraintEnd_toEndOf="@id/card_metrics"/>

    <ProgressBar
        android:id="@+id/progress_budget"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:progress="30"
        android:max="100"
        android:progressTint="@android:color/white"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_progress_start"
        app:layout_constraintStart_toStartOf="@id/tv_progress_start"
        app:layout_constraintEnd_toEndOf="@id/tv_progress_end"/>

    <!-- Expense overview -->
    <LinearLayout
        android:id="@+id/ll_overview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/progress_budget"
        app:layout_constraintStart_toStartOf="@id/progress_budget">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/check_icon"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/tv_analysis_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30% Of Your Expenses, Looks Good."
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:paddingStart="8dp"/>
    </LinearLayout>

    <!-- Timeframe tabs -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_timeframe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:singleSelection="true"
        app:chipSpacing="8dp"
        app:layout_constraintStart_toStartOf="@id/progress_budget"
        app:layout_constraintEnd_toEndOf="@id/progress_budget"
        app:layout_constraintTop_toBottomOf="@id/ll_overview">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_daily"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:checked="true"
            android:text="Daily"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_weekly"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:text="Weekly"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_monthly"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:text="Monthly"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_yearly"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:text="Year"/>
    </com.google.android.material.chip.ChipGroup>

    <!-- Calendar & search icons -->
    <LinearLayout
        android:id="@+id/ll_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/chip_timeframe"
        app:layout_constraintStart_toStartOf="@id/chip_timeframe">

        <ImageView
            android:id="@+id/iv_calendar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/calendar_icon"
            app:tint="@android:color/white" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/search_icon"
            app:tint="@android:color/white" />
    </LinearLayout>

    <!-- Pie chart -->
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ll_icons"
        app:layout_constraintStart_toStartOf="@id/ll_icons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        tools:ignore="MissingClass" />

    <!-- Bottom navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:menu="@menu/nav_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
